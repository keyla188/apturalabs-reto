---
import LogoCarousel from "./CarouselLogos.astro";
---

<section class=" pt-[126px] sm:pt-[200px] pb-[96px] overflow-hidden">
  <div
    class="absolute inset-0 opacity-40 -z-10"
    style="
      background-image: url('/background.svg');
      background-repeat: repeat;
      background-position: left top;
      background-size: 150px;
    "
  ></div>

  <div class="absolute inset-0 -z-10 bg-gradient-to-b from-white/90 to-background"></div>

  <div class="relative z-10 flex flex-col gap-10 items-center">
    <div
      class="w-full flex flex-col justify-center items-center gap-8 sm:px-0 px-4"
    >
      <div
        class="w-fit bg-white rounded-2xl flex flex-row justify-between items-center gap-2 shadow-[0px_3px_8px_4px_rgba(0,0,0,0.03)] p-1 pl-2 opacity-0 animate-fadeUp delay-1"
      >
        <div class="flex -space-x-2">
          <img
            src="photo1.avif"
            alt="User 1"
            class="w-7 h-7 rounded-full border-2 border-white object-cover"
          />
          <img
            src="photo2.avif"
            alt="User 2"
            class="w-7 h-7 rounded-full border-2 border-white object-cover"
          />
          <img
            src="photo3.avif"
            alt="User 3"
            class="w-7 h-7 rounded-full border-2 border-white object-cover"
          />
        </div>
        <p class="text-sm">Join 3k+ members</p>

        <a href="#">
          <div
            class="w-fit flex items-center justify-center gap-2 bg-yellowButton py-2 px-3 rounded-full relative overflow-hidden group text-center"
          >
            <p class="text-sm">Join Waitlist</p>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-narrow-right"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M5 12l14 0"></path><path d="M15 16l4 -4"></path><path d="M15 8l4 4"></path></svg
            >
            <span
              aria-hidden="true"
              class="pointer-events-none absolute top-0 left-0 h-[200%] w-2/3
              bg-gradient-to-r from-transparent via-white/70 to-transparent
              -translate-x-[150%] rotate-12 transform
              opacity-0 blur-md
              transition-all duration-[1300ms] ease-in-out
              group-hover:translate-x-[300%] group-hover:opacity-90"
            ></span>
          </div>
        </a>
      </div>

      <div
        class="max-w-[740px] text-center flex flex-col gap-4 items-center justify-center"
      >
        <div class="opacity-0 animate-fadeUp delay-2">
          <h1 class="sm:text-7xl text-5xl font-semibold">
            A Simple Template for Your SaaS Success
          </h1>
        </div>
        <div>
          <p class="text-lg opacity-0 animate-fadeUp delay-3">
            Ready-made sections, interactive layouts, and modern
            designâ€”all in one template to elevate your SaaS landing
            page.
          </p>
        </div>
      </div>
    </div>

    <div class="w-full flex gap-3 justify-center items-center opacity-0 animate-fadeUp delay-4">
      <a href="#">
        <div
          class="w-fit relative overflow-hidden bg-primary text-white py-2 px-6 rounded-full shadow-custom-inset group text-center"
        >
          <span class="relative z-10">Buy Template</span>
          <span
            aria-hidden="true"
            class="pointer-events-none absolute top-0 left-0 h-[200%] w-2/3
            bg-gradient-to-r from-transparent via-white/70 to-transparent
            -translate-x-[150%] rotate-12 transform
            opacity-0 blur-md
            transition-all duration-[1300ms] ease-in-out
            group-hover:translate-x-[300%] group-hover:opacity-90"
          ></span>
        </div>
      </a>
      <a href="#solution">
        <div
          class="w-fit relative overflow-hidden bg-white py-2 px-6 rounded-full text-center
         transition-opacity duration-300 hover:opacity-60"
        >
          <span class="relative z-10">See Solutions</span>
        </div>
      </a>
    </div>

    <LogoCarousel />
  </div>
</section>
